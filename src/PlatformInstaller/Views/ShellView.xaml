<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="ShellView" WindowStartupLocation="CenterScreen"
        Title="Particular Platform Installer" Height="600" Width="640" WindowStyle="None" ResizeMode="NoResize" BorderBrush="White" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml"/>
                <ResourceDictionary Source="../Styles/WindowCloseButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border BorderBrush="#20000000" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0" VerticalAlignment="Top" >
                    <Button x:Name="Exit"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="close">
                            <ContentControl Width="16"
                                Height="16"
                                Foreground="Black"
                                Template="{StaticResource CloseIcon}" />
                    </Button>

                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">
                        <Hyperlink Click="OpenLogDirectory">Logs</Hyperlink>
                    </TextBlock>
            </StackPanel>
            <Image Grid.Row="0" Source="pack://application:,,,/PlatformInstaller;component/Images/particularSmall.png" HorizontalAlignment="Left" Margin="20 20 20 0" Stretch="None" />
            <ContentControl Grid.Row="1" x:Name="ActiveItem" Margin="20,20,20,5" Focusable="False" />
            <global:Footer Grid.Row="2"/>
        </Grid>
    </Border>
</Window>