<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        x:Class="PlatformInstaller.ShellView"
        Title="MainWindow" Height="500" Width="400" WindowStyle="None" ResizeMode="NoResize" BorderBrush="White" >
    <Window.Resources>
    </Window.Resources>
    <Border BorderBrush="#20000000" BorderThickness="2">
        <DockPanel>
            <WrapPanel DockPanel.Dock="Top"  Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0" >
                <Button x:Name="Close" Content="X" HorizontalAlignment="Right" FontSize="10" Margin="10,0" FontWeight="Bold" />
                <Button x:Name="OpenLogDirectory" Content="Log" HorizontalAlignment="Right" FontSize="10" Margin="10,0" FontWeight="Bold" />
                <Label Content="{Binding Version}" HorizontalAlignment="Right" FontSize="10" Margin="10,0" />
            </WrapPanel>
            <Image DockPanel.Dock="Top" Source="/Images/particularSmall.png" HorizontalAlignment="Left" Margin="20 0 20 0" Stretch="None" VerticalAlignment="Top" />
            <ContentControl x:Name="ActiveItem" Margin="20 20 20 20"/>
        </DockPanel>
    </Border>
</Window>
