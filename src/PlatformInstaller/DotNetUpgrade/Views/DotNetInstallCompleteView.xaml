<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="DotNetInstallCompleteView">
    <UserControl.DataContext>
        <global:DotNetInstallCompleteViewModel/>
    </UserControl.DataContext>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource MaterialDesignTitleTextBlock}">.NET Framework 4.5.2 Installation</TextBlock>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Exit" Content="Exit"/>
            <Button x:Name="Reboot" Content="Reboot Now" Margin="10,10"/>
        </StackPanel>
        <StackPanel>
            <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}">Please restart your machine to complete the installation</TextBlock>
        </StackPanel>
    </DockPanel>
</UserControl>