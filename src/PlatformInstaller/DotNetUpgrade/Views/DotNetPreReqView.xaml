<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="DotNetPreReqView">
    <UserControl.DataContext>
        <global:DotNetPreReqViewModel/>
    </UserControl.DataContext>
    <DockPanel >
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource MaterialDesignTitleTextBlock}">Install .NET Framework 4.5.2</TextBlock>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Exit" Content="Exit"/>
            <Button x:Name="Install" Content="Install" Margin="10,0"/>
        </StackPanel>
        <StackPanel>
            <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}">Please click Install to commence the download and installation of this prerequisite. </TextBlock>
        </StackPanel>
    </DockPanel>
</UserControl>