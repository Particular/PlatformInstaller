<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="PlatformInstaller.SuccessView">
    <UserControl.Resources>
    </UserControl.Resources>
    <DockPanel >
        <TextBlock DockPanel.Dock="Top" FontSize="18" FontWeight="Bold">Installation Complete</TextBlock>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Close" Content="Close" Margin="10" Padding="10,0,10,0" Background="#2EA3C4" Foreground="White" BorderBrush="#1D729B" />
            <Button x:Name="Home" Content="Home"  Margin="10" Padding="10,0,10,0" Background="#2EA3C4" Foreground="White" BorderBrush="#1D729B" />
        </StackPanel>
        <TextBlock Foreground="Gray">Thank you for installing Particular Software products.</TextBlock>
    </DockPanel>
</UserControl>
