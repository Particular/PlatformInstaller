<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="RebootNeededView">
    <UserControl.DataContext>
        <global:RebootNeededViewModel/>
    </UserControl.DataContext>
    <DockPanel >
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource MaterialDesignTitleTextBlock}">A reboot is needed!</TextBlock>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Exit"  Content="Exit"/>
            <Button x:Name="Reboot" Content="Reboot Now"  Margin="10,0"/>
        </StackPanel>
        <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}">Please reboot your machine and restart the platform installer</TextBlock>
    </DockPanel>
</UserControl>
