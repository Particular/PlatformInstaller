<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PlatformInstaller.InstallingView" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
       >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <DockPanel>
        <TextBlock  DockPanel.Dock="Top" FontSize="18" FontWeight="Bold">Now Installing</TextBlock>
        <TextBlock DockPanel.Dock="Top" Foreground="Gray">Please wait until the selected products are finished installing.</TextBlock>
        <TextBlock DockPanel.Dock="Top" FontSize="12" FontWeight="Bold">Status:</TextBlock>
        <ProgressBar DockPanel.Dock="Top" Height="20" Margin="0 10 0 0" Minimum="0" Maximum="{Binding InstallCount}" Value="{Binding InstallProgress}" Foreground="#2EA3C4"/>
        <TextBlock DockPanel.Dock="Top" FontSize="10" Foreground="Gray" Text="{Binding CurrentPackageDescription}" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Back" Content="Back"  Visibility="{Binding Path=InstallFailed, Converter={StaticResource BoolToVis}}" />
        </StackPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" >
            <TextBox IsReadOnly="True" Text="{Binding ProgressService.OutputText}" Foreground="#2EA3C4" FontSize="10" FontWeight="Medium" />
        </ScrollViewer>
    </DockPanel>
</UserControl>
