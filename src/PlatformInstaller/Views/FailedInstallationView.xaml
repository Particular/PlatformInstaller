<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FailedInstallationView"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:global="clr-namespace:"
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <global:FailedInstallationViewModel/>
    </UserControl.DataContext>
    <DockPanel >
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource MaterialDesignSubheadingTextBlock}" Text="{Binding FailureDescription}" TextWrapping="Wrap"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Exit" Content="Exit"/>
            <Button x:Name="Home" Content="Back to Main"  Margin="10,0"/>
            <Button x:Name="ReportError" Content="Report Error" />
        </StackPanel>
        <TextBox DockPanel.Dock="Top" HorizontalScrollBarVisibility="Visible"
                 Margin="0 10 0 0" VerticalScrollBarVisibility="Visible" 
                 IsReadOnly="True" Text="{Binding FailuresText}" />
    </DockPanel>
</UserControl>
