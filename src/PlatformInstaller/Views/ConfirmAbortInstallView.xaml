<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ConfirmAbortInstallView"  WindowStartupLocation="CenterScreen"
        Height="190" Width="400" 
        Style="{StaticResource MaterialDesignWindowStyle}"
    >
    <Border BorderBrush="#20000000" BorderThickness="2">
        <StackPanel Margin="10" VerticalAlignment="Center">
            <TextBlock Margin="0,10,0,0" Style="{StaticResource MaterialDesignTitleTextBlock}">Exit Confirmation</TextBlock>
            <TextBlock Margin="0,10,0,0" Style="{StaticResource MaterialDesignBody1TextBlock}" TextWrapping="Wrap">Are you sure you wish to close the installer while an installation running? Some components may be left in an unknown state.</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0"  FlowDirection="RightToLeft">
                <Button x:Name="ConfirmCancellation">Exit</Button>
                <Button x:Name="ContinueInstallation" Margin="10,0">Back</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
