<!-- ReSharper disable Xaml.BindingWithContextNotResolved -->
<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="SelectItemsView">
    <UserControl.DataContext>
        <global:SelectItemsViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="ProductCheckbox" TargetType="{x:Type CheckBox}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label HorizontalAlignment="Right" Margin="0 -5 0 0" VerticalAlignment="Center" Content="{Binding Status}"/>
                            <BulletDecorator Background="Transparent">
                                <BulletDecorator.Bullet>
                                    <Border x:Name="Border" 
                                   Width="18" 
                                   Height="18" 
                                   CornerRadius="0" 
                                   BorderThickness="2"
                                   BorderBrush="#2EA3C4">
                                        <Path 
                                        Width="11" Height="11" 
                                        x:Name="CheckMark"
                                        SnapsToDevicePixels="False" 
                                        Stroke="#2EA3C4"
                                        StrokeThickness="2"
                                        Data="M 0 5 L 5 11 M 3 11 L 11 0" />
                                    </Border>
                                </BulletDecorator.Bullet>
                                <ContentPresenter Margin="4,0,0,0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  RecognizesAccessKey="True"/>
                            </BulletDecorator>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="CheckMark" Property="Data" Value="M 0 7 L 7 0" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#BAE3EF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#7ABFD3" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#6ABFC3" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="CheckMark" Property="Stroke" Value="#CCCCCC" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#CCCCCC" />
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="ProductItemTemplate">
            <Grid Margin="0 10" ToolTip="{Binding ToolTip}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Image Source="{Binding ImageUrl}" Grid.Column="0" Stretch="None" HorizontalAlignment="Left"/>
                <CheckBox Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" IsEnabled="{Binding Enabled}" IsChecked="{Binding Selected}" Foreground="Blue" Style="{StaticResource ProductCheckbox}" Visibility="{Binding Path=CheckBoxVisible, Converter={StaticResource BoolToVis}}" />
                <Label x:Name="StatusLabel" Grid.Column="1" Visibility="Hidden" VerticalAlignment="Center" HorizontalAlignment="Right" VerticalContentAlignment="Center"  Content="{Binding Status}" />
            </Grid>
            <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=FeedOK}" Value="False">
                <Setter Property="Foreground" TargetName="StatusLabel" Value="Red" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=CheckBoxVisible}" Value="False">
                <Setter Property="Visibility" TargetName="StatusLabel" Value="Visible" />
            </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
    
        <TextBlock Grid.Row="0" FontSize="18" FontWeight="Bold">Configure your development machine for the Particular Service Platform</TextBlock>
        <TextBlock Grid.Row="1" Foreground="Gray" TextWrapping="Wrap">Individual installers will be downloaded from the Internet as required.</TextBlock>
        <ItemsControl  Grid.Row="2" Focusable="False" ItemTemplate="{StaticResource ProductItemTemplate}" ItemsSource="{Binding PackageDefinitions}" Margin="0 10"/>
        <TextBlock Grid.Row="3" 
                   Visibility="{Binding Path=FeedErrors, Converter={StaticResource BoolToVis}}"
                   HorizontalAlignment="Center" 
                   Foreground="Red" FontWeight="SemiBold" TextWrapping="Wrap">Platform installer has not been able to retrieve package information from the Internet. Please consult the logs for further details.
        </TextBlock>
        <Grid Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Foreground="Gray" Text="{Binding AppVersion}" VerticalAlignment="Center" Margin ="10,0,10,0"/>
            <Button Grid.Column="1" x:Name="Install" IsEnabled="{Binding IsInstallEnabled}" Content="Install" />
            <Button Grid.Column="2" x:Name="Exit" Content="Exit" />
        </Grid>
     </Grid>
</UserControl>
