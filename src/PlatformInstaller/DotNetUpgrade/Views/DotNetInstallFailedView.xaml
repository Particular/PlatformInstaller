<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="DotNetInstallFailedView">
    <UserControl.DataContext>
        <global:DotNetInstallFailedViewModel/>
    </UserControl.DataContext>
    <DockPanel >
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource MaterialDesignTitleTextBlock}">Failed to Download or Install .NET Framework 4.5.2</TextBlock>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Exit" Content="Exit"/>
        </StackPanel>
        <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}">Please install .NET Framework 4.5.2 manually. The installation can be found on the <global:Link NavigateUri="https://www.microsoft.com/en-us/download/details.aspx?id=42642">Microsoft Download Site</global:Link>.</TextBlock>
    </DockPanel>
</UserControl>