<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="InstallChocolateyView">
    <DockPanel LastChildFill="False"  >
        <TextBlock DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" >Chocolatey required</TextBlock>
        <TextBlock DockPanel.Dock="Top" Foreground="Gray" TextWrapping="WrapWithOverflow">This installer requires <global:Link 
NavigateUri="https://chocolatey.org/">Chocolatey</global:Link> to run. You can either continue and Chocolatey will be installed for you or run the following command and select "Recheck".</TextBlock>
        <Border BorderBrush="#FF000000" DockPanel.Dock="Top" BorderThickness="1,1,1,1" Margin="5" CornerRadius="2">
            <TextBox TextWrapping="WrapWithOverflow" IsReadOnly="True" Background="#E7E7E7" Text="{Binding InstallCommand}"/>
        </Border>
        <StackPanel DockPanel.Dock="Bottom"  Orientation="Horizontal"  FlowDirection="RightToLeft">
            <Button x:Name="Cancel">Cancel</Button>
            <Button x:Name="Continue">Continue</Button>
            <Button x:Name="Copy">Copy command</Button>
            <Button x:Name="ReCheck">Re-Check Chocolatey</Button>
        </StackPanel>
    </DockPanel>
</UserControl>
