<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AcceptWarningsView"  WindowStartupLocation="CenterScreen"
        Height="190" 
        Style="{StaticResource PlatformInstallerWindowStyle}">
    <Border BorderBrush="#20000000" BorderThickness="2">
        <StackPanel Margin="10" VerticalAlignment="Center">

            <TextBlock Margin="0,10,0,0" FontSize="15" FontWeight="DemiBold" >Warning</TextBlock>
            <TextBlock Margin="0,10,0,0" FontSize="13" TextWrapping="Wrap">We have encountered a potential problem with your installation.</TextBlock>
            <ItemsControl x:Name="Problems">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=.}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0"  FlowDirection="RightToLeft">
                <Button x:Name="ConfirmCancellation">Cancel</Button>
                <Button x:Name="ContinueInstallation" Style="{StaticResource HiliteButton}">Proceed anyway</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
