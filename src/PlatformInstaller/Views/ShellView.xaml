<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        x:Class="PlatformInstaller.ShellView"
        Title="MainWindow" Height="628" Width="400" WindowStyle="None" ResizeMode="NoResize" BorderBrush="White" >
    <Window.Resources>
    </Window.Resources>
    <Border BorderBrush="#20000000" BorderThickness="2">
        <DockPanel>
            <Button Content="X" DockPanel.Dock="Top" HorizontalAlignment="Right" Width="35" cal:Message.Attach="[Event Click] = [Action Cancel()]" FontSize="10" Margin="18 -1 18 11" Foreground="Gray" FontWeight="Bold" BorderBrush="Transparent"/>
            <Image DockPanel.Dock="Top" Source="/Images/particularSmall.png" HorizontalAlignment="Left" Margin="20 0 20 0" Stretch="None" VerticalAlignment="Top" />
            <ContentControl x:Name="ActiveItem" Margin="20 20 20 20"/>
        </DockPanel>
    </Border>
</Window>
