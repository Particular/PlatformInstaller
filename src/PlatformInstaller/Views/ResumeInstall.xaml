<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="ResumeInstallView"  WindowStartupLocation="CenterScreen"
        Height="200" Width="400" WindowStyle="None"
        Style="{StaticResource MaterialDesignWindowStyle}"
    >
    <Window.DataContext>
        <global:ResumeInstallViewModel/>
    </Window.DataContext>
    <Border BorderBrush="#20000000" BorderThickness="2">
        <StackPanel Margin="10">
            <Image Source="pack://application:,,,/PlatformInstaller;component/Images/particularSmall.png" HorizontalAlignment="Left" Stretch="None" />
            <TextBlock Margin="0,10,0,0" Style="{StaticResource MaterialDesignTitleTextBlock}" >Resume the previous installation?</TextBlock>
            <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">The Platform Installer has completed the required reboot and may now resume the installation. Do you wish to continue?"</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0"  FlowDirection="RightToLeft">
                <Button x:Name="ConfirmCancellation" >Cancel</Button>
                <Button x:Name="ContinueInstallation" Margin="10,0">Continue installation</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
